pipeline {
  agent any
    environment { 
        projectname = "hello"
        envBRANCH_NAME = "master"
        envBUILD_URL = "http://52.201.218.9:8080/job/teste/job/master/"
        //tgtoken = 'tgtoken2'
       // chatid = 'tgid'
    }
  stages {
    stage ('Build') {
      steps {
        echo 'Running build automation'
        sh './gradlew build --no-daemon'
        archiveArtifacts artifacts: 'dist/trainSchedule.zip'
      }
    }
  }
  post {
            failure {
            sh "curl -s -X POST https://api.telegram.org/bot'tgtoken2'/sendMessage -d chat_id='tgid' -d text='Project : ${projectname}\nBranch: ${envBRANCH_NAME}\nBuild : Finished \nBuild_Url = ${envBUILD_URL}' "
            }
            unstable {
            sh "curl -s -X POST https://api.telegram.org/bot'tgtoken2'/sendMessage -d chat_id='tgid' -d text='Project : ${projectname}\nBranch: ${envBRANCH_NAME}\nBuild : Finished \nBuild_Url = ${envBUILD_URL}' "
            }
            success {
            sh "curl -s -X POST https://api.telegram.org/bot'tgtoken2'/sendMessage -d chat_id='tgid' -d text='Project : ${projectname}\nBranch: ${envBRANCH_NAME}\nBuild : Finished \nBuild_Url = ${envBUILD_URL}'"
           }  
        }
}
