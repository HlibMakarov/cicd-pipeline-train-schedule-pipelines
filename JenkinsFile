pipeline {
  agent any
  environment { 
        projectname = "hello"
        envBRANCH_NAME = "master"
        envBUILD_URL = "http://52.201.218.9:8080/job/teste/job/master/"
        tgtoken = credentialsID('telegram_token')
        chatid = credentialsId('TelegramChatId')
    }
  stages {
    stage ('Build') {
      steps {
        echo 'Running build automation'
        sh './gradlew build --no-daemon'
        archiveArtifacts artifacts: 'dist/trainSchedule.zip'
      }
    }
   stage('Notification') {
     steps {
             sh('curl -s -X POST https://api.telegram.org/bot$tgtoken/sendMessage -d chat_id=$chatid -d text="Project : ${projectname}\nBranch: ${envBRANCH_NAME}\nBuild : Finished \nBuild_Url = ${envBUILD_URL}"')
           }
   }
  }
}
