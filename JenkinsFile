pipeline {
  agent any
  environment { 
        projectname = "hello"
        envBRANCH_NAME = "master"
        envBUILD_URL = "http://52.201.218.9:8080/job/teste/job/master/"
        tgtoken = 'telegram_token'
        chatid = 'TelegramChatId'
    }
  stages {
    stage ('Build') {
      steps {
        echo 'Running build automation'
        sh './gradlew build --no-daemon'
        archiveArtifacts artifacts: 'dist/trainSchedule.zip'
      }
    }
   stage('Notification') {
     steps {
       script {
               withCredentials([string(credentialsId: 'tgtoken', variable: 'tgtoken'),
               string(credentialsId: 'chatid', variable: 'chatid')]) {
                 sh """
                 (curl -s -X POST https://api.telegram.org/bot${tgtoken}/sendMessage -d chat_id=${chatid} -d text="Project : ${projectname}\nBranch: ${envBRANCH_NAME}\nBuild : Finished \nBuild_Url = ${envBUILD_URL}")
                 """
            }
     }
   }
  }
}
}
