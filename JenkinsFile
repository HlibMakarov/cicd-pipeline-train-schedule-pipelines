pipeline {
    agent any
    environment {
        creds = credentials('telegram_token')
    }
    stages {
        stage('Example') {
            steps {
                /* CORRECT */
                sh("curl  https://api.telegram.org/bot$creds/sendMessage?text=mytest&chat_id=359042866")
            }
        }
    }
    post {
            failure {
            telegramSend 'Hello World'

}
            unstable {
            telegramSend 'Hello World'
                }
            success {
            telegramSend 'Hello World'
          }  
        }
}
