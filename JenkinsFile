pipeline {
  agent any
  environment { 
        projectname = "hello"
        envBRANCH_NAME = "master"
        envBUILD_URL = "http://18.234.180.15:8080/job/testbot43/job/master/6/console"
    }
  stages {
    stage ('Build') {
      steps {
        echo 'Running build automation'
        sh './gradlew build --no-daemon'
        archiveArtifacts artifacts: 'dist/trainSchedule.zip'
      }
    }
stage('Notification') {
  steps {
    script {
            withCredentials([string(credentialsId: 'telegram_token', variable: 'telegram_token'),
            string(credentialsId: 'TelegramChatId', variable: 'chat_id')]) {
              sh """
              curl -s -X POST https://api.telegram.org/bot${TelegramChatId}/sendMessage -d TelegramChatId=${TelegramChatId} -d text="Project : ${projectname}\nBranch: ${envBRANCH_NAME}\nBuild : Finished \nBuild_Url = ${envBUILD_URL}"
              """
            }
           }
  }
}
}
}
