pipeline {
  agent any
  environment { 
        chat_id = 'TelegramChatId'
        telegram_token = 'TelegramToken'
    }
  stages {
    stage ('Build') {
      steps {
        echo 'Running build automation'
        sh './gradlew build --no-daemon'
        archiveArtifacts artifacts: 'dist/trainSchedule.zip'
      }
    }
    stage('Notification') {
            steps {
               script {
                        withCredentials([string(credentialsId: 'TelegramToken', variable: 'telegram_token'),
                             string(credentialsId: 'TelegramChatId', variable: 'chat_id')]) {
                                sh """
                                          curl -s -X POST https://api.telegram.org/bot${telegram_token}/sendMessage -d chat_id=${chat_id} -d parse_mode="HTML" -d text="<b>Project</b> : POC \
                                          <b>Branch</b>: master \
                                          <b>Build </b> : OK \
                                          <b>Test suite</b> = Passed"
                                """
                        }
                      }
            }
    }
  }
}
