pipeline {
  agent any
  environment { 
        chat_id = 'TelegramChatId'
        telegram_token = 'TelegramToken'
        projectname = "hello"
        envBRANCH_NAME = "master"
        envBUILD_URL = "http://18.234.180.15:8080/job/testbot43/job/master/6/console"
    }
  stages {
    stage ('Build') {
      steps {
        echo 'Running build automation'
        sh './gradlew build --no-daemon'
        archiveArtifacts artifacts: 'dist/trainSchedule.zip'
      }
    }
    stage('Notification') {
            steps {
               script {
                        withCredentials([string(credentialsId: 'TelegramToken', variable: 'telegram_token'),
                             string(credentialsId: 'TelegramChatId', variable: 'chat_id')]) {
                                sh """
                                curl -s -X POST https://api.telegram.org/bot${telegram_token}/sendMessage -d chat_id=${chat_id} -d chat_id=${chat_id} -d text="Project : ${projectname}\n Branch: ${envBRANCH_NAME}\nBuild : OK\nBuild_Url = ${envBUILD_URL}"
                                """
                        }
                      }
            }
    }
     post {
        failure {
            sh """
            curl -s -X POST https://api.telegram.org/bot${telegram_token}/sendMessage -d chat_id=${chat_id} -d chat_id=${chat_id} -d text="Project : ${projectname}\n Branch: ${envBRANCH_NAME}\nBuild : Finish\nBuild_Url = ${envBUILD_URL}"
            """
        }
        unstable {
            }
        success {
           sh """
            curl -s -X POST https://api.telegram.org/bot${telegram_token}/sendMessage -d chat_id=${chat_id} -d chat_id=${chat_id} -d text="Project : ${projectname}\n Branch: ${envBRANCH_NAME}\nBuild : Finish\nBuild_Url = ${envBUILD_URL}"
            """
            
         }
    }
  }
}
