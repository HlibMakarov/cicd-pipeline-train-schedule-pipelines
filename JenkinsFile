pipeline {
  agent any
  stages {
    stage ('Build') {
      steps {
        echo 'Running build automation'
        sh './gradlew build --no-daemon'
        archiveArtifacts artifacts: 'dist/trainSchedule.zip'
      }
    }
  }
  post {
            failure {
            telegramSend(message: 'Hello World', chatId: 359042866)
            }
            unstable {
            telegramSend(message: 'Hello World', chatId: 359042866)
            }
            success {
            telegramSend(message: 'Hello World', chatId: 359042866)
           }  
        }
}
